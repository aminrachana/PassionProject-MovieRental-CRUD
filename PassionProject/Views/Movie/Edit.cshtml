@model PassionProject.Models.MovieDto
@{
    ViewBag.Title = "Edit";
}

<h2>Update Movie</h2>
<form action="/Movie/Update/@Model.MovieID" method="POST">
    <input type="hidden" name="MovieID" value="@Model.MovieID" />
    <div>
        <label>Name: </label><input type="text" name="MovieName" value="@Model.MovieName" class="form-control"/>
    </div>
    <div>
        <label>Genre: </label><input type="text" name="MovieGenre" value="@Model.MovieGenre" class="form-control"/>
    </div>
    <div>
        <label>Year: </label><input type="number" name="MovieYear" value="@Model.MovieYear" class="form-control"/>
    </div>
    <div>
        <label>Cost: </label><input type="number" name="MovieCost" value="@Model.MovieCost" class="form-control"/>
    </div>
    <div>
        <label>Description: </label><textarea type="text" name="MovieDescription" rows="3" class="form-control">@Model.MovieDescription</textarea>
    </div>
    <div>
        <input type="submit" value="Update Movie" class="btn btn-primary"/>
    </div>
</form>

